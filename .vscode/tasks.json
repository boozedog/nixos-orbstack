{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "statix",
      "type": "shell",
      "command": "statix",
      "args": [
        "check",
        "--format=errfmt"
      ],
      "problemMatcher": {
        "owner": "statix",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "severity": "warning",
        "pattern": {
          "regexp": "^([^>]+)>(\\d+):(\\d+):([WE]):(\\d+):(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "code": 5,
          "message": 6
        }
      },
      "presentation": {
        "reveal": "never"
      },
      "group": "none",
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "deadnix",
      "type": "shell",
      "command": "deadnix --output-format=json | jq -r '.file as $f | .results[] | \"\\($f):\\(.line):\\(.column):\\(.endColumn): \\(.message)\"'",
      "problemMatcher": {
        "owner": "deadnix",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "severity": "warning",
        "pattern": {
          "regexp": "^([^:]+):(\\d+):(\\d+):(\\d+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "endColumn": 4,
          "message": 5
        }
      },
      "presentation": {
        "reveal": "never"
      },
      "group": "none",
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}